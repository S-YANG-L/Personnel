summerready = function() {
    var userName = summer.getStorage("userName");
    var organizationName = summer.getStorage("organizationName");
    var headImageUrl = summer.getStorage("headImageUrl");
    $("#userName").text(userName);
    $("#organizationName").text(organizationName);
    if (headImageUrl == null || headImageUrl == "") {
        $("#imgid").attr("src", "../img/mailhead.png");
    } else {
        $("#imgid").attr("src", headImageUrl);
    }
    beginning();
}
//获取详细信息
function beginning() {
    summer.ajax({
        type : 'post',
        url : summer.getAppStorage("url") + '/CustodianLongin/getUser',
        param : {
            "token" : summer.getAppStorage("tokenEntity").token,
            "id" : summer.getAppStorage("userId"),
        },
        header : {
            //Authorization : "OAuth2: token",
            //"Content-Type" : "application/json"
            Authorization : "OAuth2: token"
        }
    }, function(response) {
        response.data = JSON.parse(response.data);
        var code = response.data.code;
        var user = response.data.user;
        if (code == "200") {
            document.getElementById("name").innerHTML = user.name;
            document.getElementById("organization").innerHTML = user.organizationName;
        } else {
            UM.toast({
                text : response.data.message
            });
        }
    });
}

//判断是否进行修改资料
function UPmaterial() {
    UM.confirm({
        title : '提示',
        text : '是否继续进行修改个人资料操作',
        btnText : ["取消", "确定"],
        overlay : true,
        ok : function() {
            goUPmaterial();
        },
        cancle : function() {
            //$this.css('backgroundColor', '#007aff');
        }
    });
}

function goUPmaterial() {
    var t = (new Date()).valueOf();
    summer.openWin({
        id : "newMaterial" + t,
        url : '/html/newMaterial.html'
    });
}

//判断是否进行退出
function logOff() {
    UM.confirm({
        title : '提示',
        text : '您确定要狠心离开我们',
